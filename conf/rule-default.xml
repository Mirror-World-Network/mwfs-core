<?xml version="1.0" encoding="UTF-8"?>
<rules>
    <version>1.0</version>
    <!--创建矿工-->
    <level0 id="0">
        <rule>
            <!--生命周期，最大获取块数 6150-30days-->
            <totalBlocks>
                <min>0</min>
                <max>6150</max>
            </totalBlocks>
        </rule>
        <forgepool>
            <number id="1">
                <min>1</min>
                <max>101</max>
            </number>
            <reward id="2">
                <!--收益比率-->
                <min>0.0</min>
                <max>0.3</max>
            </reward>
        </forgepool>

        <consignor>
            <!--投入MW区间-->
            <amount>
                <min>1000000000000</min>
                <max>48000100000000</max>
            </amount>
        </consignor>
    </level0>
    <!--加入矿工-->
    <level1 id="1">
        <rule>
            <totalBlocks>
                <min>1</min>
                <max>6150</max>
            </totalBlocks>
        </rule>

        <forgepool>
            <number id="1">
                <min>1</min>
                <max>101</max>
            </number>
            <reward id="2">
                <min>0.0</min>
                <max>0.3</max>
            </reward>
        </forgepool>

        <consignor>
            <amount>
                <min>1000000000000</min>
                <max>48000100000000</max>
            </amount>
        </consignor>
    </level1>
</rules>
